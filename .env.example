# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================

# URL completa de conexão do banco de dados
# Formato: mysql://usuario:senha@host:porta/database
DATABASE_URL=mysql://casadf:casadfpassword@db:3306/casadf

# Configurações do MySQL (Docker)
MYSQL_ROOT_PASSWORD=rootpassword_change_me
MYSQL_DATABASE=casadf
MYSQL_USER=casadf
MYSQL_PASSWORD=casadfpassword_change_me
MYSQL_PORT=3306

# ============================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ============================================

# Ambiente de execução (production ou development)
NODE_ENV=production

# Porta da aplicação
PORT=3000
APP_PORT=3000

# ============================================
# AUTENTICAÇÃO E SEGURANÇA
# ============================================

# Chave secreta para JWT (GERAR COM: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_generate_with_openssl

# ============================================
# MANUS OAUTH
# ============================================

# ID da aplicação Manus
VITE_APP_ID=your_manus_app_id

# URL do servidor OAuth
OAUTH_SERVER_URL=https://api.manus.im

# URL do portal de login
VITE_OAUTH_PORTAL_URL=https://auth.manus.im

# ============================================
# PROPRIETÁRIO DO SISTEMA
# ============================================

# OpenID do proprietário (fornecido pela Manus)
OWNER_OPEN_ID=your_owner_open_id

# Nome do proprietário
OWNER_NAME=CasaDF Imóveis

# ============================================
# MANUS FORGE API (BACKEND)
# ============================================

# URL da API Forge para backend
BUILT_IN_FORGE_API_URL=https://forge.manus.im/api

# Chave de API para backend (obter no painel Manus)
BUILT_IN_FORGE_API_KEY=your_backend_forge_api_key

# ============================================
# MANUS FORGE API (FRONTEND)
# ============================================

# URL da API Forge para frontend
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.im/api

# Chave de API para frontend (obter no painel Manus)
VITE_FRONTEND_FORGE_API_KEY=your_frontend_forge_api_key

# ============================================
# ANALYTICS
# ============================================

# Endpoint de analytics
VITE_ANALYTICS_ENDPOINT=https://analytics.manus.im

# ID do website para analytics
VITE_ANALYTICS_WEBSITE_ID=your_website_id

# ============================================
# INFORMAÇÕES DO SITE
# ============================================

# Título da aplicação
VITE_APP_TITLE=CasaDF - Sistema Imobiliário

# URL do logo
VITE_APP_LOGO=https://example.com/logo.png

# ============================================
# PHPMYADMIN (DESENVOLVIMENTO)
# ============================================

# Porta do phpMyAdmin (apenas para desenvolvimento)
PHPMYADMIN_PORT=8080

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 
# 1. NUNCA commite este arquivo com valores reais no Git
# 2. Copie este arquivo para .env e preencha com valores reais
# 3. Em produção, use secrets managers (AWS Secrets, Google Secret Manager, etc)
# 4. Gere JWT_SECRET forte: openssl rand -base64 32
# 5. Todas as variáveis VITE_* são expostas no frontend
# 6. Variáveis sem VITE_* são apenas para backend
#
