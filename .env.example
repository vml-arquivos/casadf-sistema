# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS (PostgreSQL)
# ============================================
DATABASE_URL=postgres://casadf_user:casadf_password@localhost:5432/casadf_db
PGUSER=casadf_user
PGPASSWORD=casadf_password
PGDATABASE=casadf_db
PGHOST=localhost
PGPORT=5432

# ============================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ============================================
NODE_ENV=production
PORT=3000
SITE_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000/api

# ============================================
# AUTENTICAÇÃO E SEGURANÇA
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# OAUTH MANUS (Sistema de Autenticação)
# ============================================
VITE_APP_ID=your-manus-app-id
OAUTH_SERVER_URL=https://oauth.manus.im
VITE_OAUTH_PORTAL_URL=https://oauth.manus.im

# ============================================
# INFORMAÇÕES DO PROPRIETÁRIO
# ============================================
OWNER_OPEN_ID=your-owner-open-id
OWNER_NAME=Nome do Proprietário

# ============================================
# MANUS FORGE API (Backend)
# ============================================
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=your-backend-forge-api-key

# ============================================
# MANUS FORGE API (Frontend)
# ============================================
VITE_FRONTEND_FORGE_API_URL=https://api.manus.im
VITE_FRONTEND_FORGE_API_KEY=your-frontend-forge-api-key

# ============================================
# ANALYTICS
# ============================================
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# ============================================
# INFORMAÇÕES DO SITE
# ============================================
VITE_APP_TITLE=CasaDF - Imóveis em Brasília
VITE_APP_LOGO=/logo.png

# ============================================
# INTEGRAÇÃO COM IA (OPCIONAL)
# ============================================
# Google Gemini API para funcionalidades de IA
GOOGLE_GEMINI_API_KEY=

# Manus API para automações
MANUS_API_KEY=

# ============================================
# INTEGRAÇÃO N8N (OPCIONAL)
# ============================================
# Webhook URL para integração com N8N
N8N_WEBHOOK_URL=

# ============================================
# DOCKER COMPOSE (apenas para desenvolvimento local)
# ============================================
APP_PORT=3000

# pgAdmin (ferramenta de administração do PostgreSQL)
PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@casadf.local
PGADMIN_PASSWORD=admin

# ============================================
# STORAGE E UPLOADS (AWS S3 ou compatível)
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=casadf-uploads
# AWS_S3_ENDPOINT=

# ============================================
# INTEGRAÇÕES EXTERNAS (OPCIONAL)
# ============================================
# Chatwoot para atendimento
# CHATWOOT_URL=
# CHATWOOT_API_KEY=

# Google Analytics
# GOOGLE_ANALYTICS_ID=

# Facebook Pixel
# FACEBOOK_PIXEL_ID=

# ============================================
# OBSERVAÇÕES
# ============================================
# 1. Copie este arquivo para .env e preencha com suas credenciais reais
# 2. NUNCA commite o arquivo .env no Git (já está no .gitignore)
# 3. Em produção, use variáveis de ambiente do servidor/container
# 4. Gere um JWT_SECRET forte: openssl rand -base64 32
# 5. Para PostgreSQL em produção, use senhas fortes e únicas
